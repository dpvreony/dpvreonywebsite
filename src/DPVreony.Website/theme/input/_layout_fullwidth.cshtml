<!DOCTYPE html>
<html lang="en">
@await Html.PartialAsync("_head")
<body>
    <!-- Navigation -->
    @RenderSectionOrPartial("Navigation", "_navigation")
    <!-- Page Header -->
    @RenderSectionOrPartial("Header", "_header")
    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row">
            <div id="content" class="col-md-12">
                @RenderBody()
            </div>
        </div>
    </div>
    <hr>
    <!-- Footer -->
    @RenderSectionOrPartial("Footer", "_footer")
@await Html.PartialAsync("_scripts")
@await RenderSectionAsync("Scripts", false)
<!-- Bootstrap core JavaScript -->
    <script src="@Context.GetLink("/lib/jquery/jquery.min.js")"></script>
    <script src="@Context.GetLink("/lib/bootstrap/js/bootstrap.bundle.min.js")"></script>
</body>
</html>
