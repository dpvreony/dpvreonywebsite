@{
    var longSha = Environment.GetEnvironmentVariable("GITHUB_SHA");
}
<footer>
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <p class="copyright text-muted m-0">Copyright &copy;2001 - @DateTime.Now.Year DPVreony and Contributors.</p>
                <br />
                <div class="font-weight-bold small"><a href="https://statiq.dev">Generated by Statiq</a></div>
                <div class="font-weight-bold small">
                    Commit:
                    @{
    if (longSha != null && longSha.Length > 7)
    {
        var shortSha = longSha.Substring(0, 7);
        <a href="https://github.com/dpvreony/dpvreonywebsite/commit/@longSha">@shortSha</a>
    }
    else
    {
        @:#LOCAL#
    }

                    }
                </div>
                </div>
        </div>
    </div>
</footer>
